@using System.Globalization

@model BIZNEWS_FREE.Models.Article



<div class="position-relative mb-3">
    <img class="img-fluid w-10" src="img/news-700x435-1.jpg" style="object-fit: cover;">
    <div class="bg-white border border-top-0 p-4">
        <div class="mb-3">
            <a class="badge badge-primary text-uppercase font-weight-semi-bold p-2 mr-2"
               href="">@Model.Category.CategoryName</a>
            <a class="text-body" href="">@Model.CreatedDate.ToString("dd MMMM yyyy г. H:mm", new CultureInfo("aze"))</a>
        </div>
        <h1 class="mb-3 text-secondary text-uppercase font-weight-bold">@Model.Title</h1>




        <!-- Контейнер Flexbox -->
        <div style="display: flex; align-items: center;">
            <!-- Текст слева -->
            <div style="flex: 1; margin-right: 15px;">
                @Html.Raw(Model.Content)
            </div>


            <!-- Изображение справа -->
            <img class="img-fluid" src="@Model.PhotoUrl" style="max-width: 20%; height: auto;">
        </div>



    </div>
    <div class="d-flex justify-content-between bg-white border border-top-0 p-4">
        <div class="d-flex align-items-center">
            <img class="rounded-circle mr-2" src="img/user.jpg" width="25" height="25" alt="">
            <span>@Model.CreatedBy</span>
        </div>

        <div class="d-flex align-items-center">

            <span>Tags</span>
            @foreach (var item in Model.ArticleTags)
            {

                <small><a href="#" title="" class="tag-link">@item.Tag.TagName</a></small>
            }



            <span class="ml-3"><i class="far fa-eye mr-2"></i>@Model.ViewCount</span>

        </div>
    </div>
</div>