@model IEnumerable<BIZNEWS_FREE.Models.Article>


<a href="/admin/article/create" class="btn btn-dark btn-block">Create New Article</a>
<table class="table table-hover table-bordered">

    <thead>

        <tr>
            <th>№</th>
            <th>Title</th>
            <th>Category</th>
            <th>Tags</th>
            <th>Is Active</th>
            <th>Photo</th>
            <th>Creted data</th>
        </tr>
    </thead>
    <tbody>
        @{
            int counter = 1; // Объявление и инициализация счетчика
        }
        @foreach (var item in Model)
        {
            
            
            <tr>
                <td>@item.Id</td>
                <td>@item.Title</td>
                <td>@item.Category.CategoryName</td>
                <td>
                    @foreach (var tag in item.ArticleTags)
                    {
                        <span>
                            @tag.Tag.TagName
                        </span>
                    }
                </td>
                <td>@(item.IsActive ? "aktiv" : "deaktiv") </td>
                <td> <img src="@item.PhotoUrl" width="200"/> </td>
                <td>@item.CreatedDate.ToString("dd/MM/yyyy")</td>
              
            </tr>
        }
    </tbody>
</table>
